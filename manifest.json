{
    "manifest_version": 3,

    "name": "arXiv title",

    "version": "1.0.0",

    "description": "an extension for extracting arXiv title and URL for markdown",

    "icons": {
        "16": "icon16.png"
    },
    "action": {
        "default_icon": "icon16.png"
    },
    "content_scripts": [{
        "matches": ["https://arxiv.org/abs/*"],
        "js": ["content.js"]
    }]
}